hooks examples:

post-receive:
#!/bin/sh
git --work-tree=/root/manual-tests/hooks-test/www/html --git-dir=/root/manual-tests/hooks-test/repo/test-deploy.git checkout -f


post-merge:
#!/bin/sh
git --work-tree=/root/manual-tests/hooks-test/www/html --git-dir=/root/manual-tests/hooks-test/repo/test-deploy.git checkout -f

#!/bin/sh




touch source/1.txt
touch source/2.txt
touch source/3.txt
mkdir source/subfolder
touch source/subfolder/s1.txt
touch source/subfolder/s2.txt
mkdir source/git
touch source/git/g1.txt
touch source/git/g2.txt

touch source/1.txt && touch source/2.txt && touch source/3.txt && mkdir source/subfolder && touch source/subfolder/s1.txt && touch source/subfolder/s2.txt && mkdir source/git && touch source/git/g1.txt && touch source/git/g2.txt